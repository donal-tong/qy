<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="topbar_text">
	    <item name="android:textSize">23sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#ffffffff</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:shadowColor">#40000000</item>
	    <item name="android:shadowDy">-2.0</item>
	    <item name="android:shadowRadius">4.0</item>
	    <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/friendcard_button_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
</resources>