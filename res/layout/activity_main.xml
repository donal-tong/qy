<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >
	<WebView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
		android:id="@+id/webview"
	    />
   	<LinearLayout
   	    android:id="@+id/main_tab"
   		android:orientation="horizontal"
   		android:layout_width="match_parent"
   		android:layout_height="49dp"
   		android:gravity="center_vertical"
   		android:layout_alignParentBottom="true"
   		android:background="@color/nav_color"
   		android:visibility="visible"
   		android:fadingEdge="none"
   	    >
   	    <RelativeLayout 
   	        android:onClick="ButtonClick"
   	        android:id="@+id/radio_button1"
   	        style="@style/main_tab_bottom"
   	        >
   	        <View 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="0.5px"
   	            android:background="#959595"
   	            />
   	        <ImageView 
   	            android:duplicateParentState="true"
   	            android:layout_marginTop="2dp"
   	            android:layout_width="31dp"
   	            android:layout_height="31dp"
   	            android:background="@drawable/tabbar_phone"
   	            android:layout_centerHorizontal="true"
   	            />
   	        <TextView 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="18dp"
   	            android:layout_alignParentBottom="true"
   	            android:text="通讯录"
   	            android:gravity="center_horizontal"
   	            android:textColor="@color/tabbar_text_color"
   	            android:layout_marginBottom="2dp"
   	            />
   	    </RelativeLayout>
   	    <RelativeLayout 
   	        android:onClick="ButtonClick"
   	        android:id="@+id/radio_button2"
   	        style="@style/main_tab_bottom"
   	        >
   	        <View 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="0.5px"
   	            android:background="#959595"
   	            />
   	        <ImageView 
   	            android:duplicateParentState="true"
   	            android:layout_marginTop="2dp"
   	            android:layout_width="31dp"
   	            android:layout_height="31dp"
   	            android:background="@drawable/tabbar_activity"
   	            android:layout_centerHorizontal="true"
   	            />
   	        <TextView 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="18dp"
   	            android:layout_alignParentBottom="true"
   	            android:text="活动"
   	            android:gravity="center_horizontal"
   	            android:textColor="@color/tabbar_text_color"
   	            android:layout_marginBottom="2dp"
   	            />
   	    </RelativeLayout>
   	    <RelativeLayout 
   	        android:onClick="ButtonClick"
   	        android:id="@+id/radio_button3"
   	        style="@style/main_tab_bottom"
   	        >
   	        <View 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="0.5px"
   	            android:background="#959595"
   	            />
   	        <ImageView 
   	            android:layout_marginTop="2dp"
   	            android:duplicateParentState="true"
   	            android:layout_width="31dp"
   	            android:layout_height="31dp"
   	            android:background="@drawable/tabbar_discover"
   	            android:layout_centerHorizontal="true"
   	            />
   	        <TextView 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="18dp"
   	            android:layout_alignParentBottom="true"
   	            android:text="发现"
   	            android:gravity="center_horizontal"
   	            android:textColor="@color/tabbar_text_color"
   	            android:layout_marginBottom="2dp"
   	            />
   	    </RelativeLayout>
   	    
   	    <RelativeLayout 
   	        android:onClick="ButtonClick"
   	        android:id="@+id/radio_button4"
   	        style="@style/main_tab_bottom"
   	        >
   	        <View 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="0.5px"
   	            android:background="#959595"
   	            />
   	        <ImageView 
   	            android:duplicateParentState="true"
   	            android:layout_marginTop="2dp"
   	            android:layout_width="31dp"
   	            android:layout_height="31dp"
   	            android:background="@drawable/tabbar_me"
   	            android:layout_centerHorizontal="true"
   	            />
   	        <TextView 
   	            android:duplicateParentState="true"
   	            android:layout_width="match_parent"
   	            android:layout_height="18dp"
   	            android:layout_alignParentBottom="true"
   	            android:text="名片"
   	            android:gravity="center_horizontal"
   	            android:textColor="@color/tabbar_text_color"
   	            android:layout_marginBottom="2dp"
   	            />
   	    </RelativeLayout>
   	</LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_tab"
        android:layout_below="@+id/navbar"
        />
    
	<RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        android:id="@+id/navbar"
        >
        
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="26dp"
            android:layout_height="18dp"
            android:background="@drawable/btn_message"
            android:layout_centerVertical="true"
            android:onClick="showMessage"
            android:layout_marginLeft="12dp"
            />
        
        <com.readystatesoftware.viewbadger.BadgeView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="1"
			android:id="@+id/badge"
			android:visibility="invisible"
			android:layout_alignTop="@+id/leftBarButton"
			android:layout_toRightOf="@+id/leftBarButton"
			android:layout_marginLeft="-10dp"
			android:layout_marginTop="-10dp"
			android:layout_gravity="center" />
        
        <TextView 
            android:id="@+id/navTitle"
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_add"
            android:layout_centerVertical="true"
           	android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			android:onClick="addSomething"
            />
    </RelativeLayout>
</RelativeLayout>