<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <WebView 
       	android:id="@+id/webview"
       	android:layout_width="match_parent"
      	android:layout_height="match_parent"
      	android:visibility="gone"
      	/>
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        android:id="@+id/navLayout"
        >
        
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_left_drawer_menu"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:onClick="ButtonClick"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/messageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:textSize="@dimen/message_count_size"
            android:minWidth="20dp"
            android:background="@drawable/message_label"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="invisible"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="通讯录"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            android:id="@+id/tvTitle"
            />
        <Button
                android:id="@+id/rightBarButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_left_drawer_plus"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/navbar_button_text_size"
                android:layout_alignParentRight="true"
                android:onClick="ButtonClick"
                />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_below="@+id/navLayout"
    	android:id="@+id/main_rl"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
     	>
		
	</RelativeLayout>
</RelativeLayout>
