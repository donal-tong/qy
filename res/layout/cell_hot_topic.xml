<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_margin="10dp"
    android:background="@drawable/layout_cell_hot_topic"
    >
    <TextView 
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#2b2b2b"
        />
    <TextView 
        android:id="@+id/tvTime"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/cell_subtitle_size"
        android:textColor="#999999"
        />
    <RelativeLayout 
        android:layout_marginTop="10dp"   
        android:layout_width="match_parent"
		android:layout_height="153dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/frame_image"
        >
         <ImageView 
			android:id="@+id/imgThumb"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/content_image_loading"
			android:layout_margin="1px"
       	 	/>
    </RelativeLayout>
   
    <TextView 
        android:id="@+id/tvDes"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:textSize="@dimen/cell_subtitle_size"
        android:textColor="#999999"
        />
    <View 
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#dfdfdf"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="查看全文"
	        android:textSize="16dp"
       		android:textColor="#2b2b2b"
       		android:layout_centerVertical="true"
        />
        <ImageView 
	        android:layout_width="9dp"
	        android:layout_height="14dp"
	        android:layout_centerVertical="true" 
			android:layout_marginRight="15dp"
			android:layout_alignParentRight="true"
			android:background="@drawable/cell_accessory"
        />
    </RelativeLayout>
    
</LinearLayout>
    
</LinearLayout>
