<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/transparent" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        />
    <LinearLayout 
        android:layout_marginTop="44dp"
        android:layout_alignParentRight="true"
        android:layout_width="140dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/nav_color"
        >
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#345b83"
        />
        <RelativeLayout 
        android:id="@+id/btnPhone"
        android:layout_height="50dp"
        android:layout_width="140dp"
        android:background="@color/nav_color"
        android:onClick="onClick"
        >
        
        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/btn_icon_nav_phonebook_pressed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="发布通讯录"
            style="@style/option_text_style"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#345b83"
        />
    <RelativeLayout 
        android:id="@+id/btnActivity"
        android:layout_height="50dp"
        android:layout_width="140dp"
        android:background="@color/nav_color"
        android:onClick="onClick"
        >
        
        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/btn_icon_nav_activity_pressed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="发布活动"
            style="@style/option_text_style"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#345b83"
        />
    <RelativeLayout 
        android:id="@+id/btnCard"
        android:layout_height="50dp"
        android:layout_width="140dp"
        android:background="@color/nav_color"
        android:onClick="onClick"
        >
        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/btn_icon_nav_more_pressed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="新建名片"
            style="@style/option_text_style"
            />
    </RelativeLayout>
    </LinearLayout>
    

</RelativeLayout>
