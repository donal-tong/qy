<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="match_parent"
    android:background="@drawable/left_menu_bg"
    android:id="@+id/menu_rl"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View 
        android:layout_weight="0.15"
        android:layout_height="0dp"
        android:layout_width="10dp"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView 
        	android:layout_width="73dp"
        	android:layout_height="19dp"
        	android:src="@drawable/left_menu_icon1_bg"
        	/>
        <ImageView 
            android:layout_marginLeft="5dp"
        	android:layout_width="64dp"
        	android:layout_height="19dp"
        	android:src="@drawable/left_menu_icon2_bg"
        	/>
    </LinearLayout>
	<View 
        android:layout_weight="0.1"
        android:layout_height="0dp"
        android:layout_width="10dp"
        />   
    <RelativeLayout 
        android:id="@+id/rlMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView 
            android:id="@+id/imgMessage"
            android:layout_marginLeft="54dp"
        	android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:src="@drawable/left_menu_message_icon"
        	/>
        <TextView
            android:layout_marginLeft="-12dp"
            android:layout_toRightOf="@+id/imgMessage"
            android:id="@+id/messageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textSize="@dimen/message_count_size"
            android:minWidth="20dp"
            android:background="@drawable/message_label"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="invisible"
            />
        <TextView 
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imgMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息"
            style="@style/LeftMenuButtonStyle"
            />
    </RelativeLayout>
    <View 
        android:layout_weight="0.06"
        android:layout_height="0dp"
        android:layout_width="10dp"
        /> 
    <RelativeLayout 
        android:id="@+id/rlPhonebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView 
            android:id="@+id/imgPhonebook"
            android:layout_marginLeft="54dp"
        	android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:src="@drawable/left_menu_phonebook_icon"
        	/>
        <TextView 
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imgPhonebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="通讯录"
            style="@style/LeftMenuButtonStyle"
            />
    </RelativeLayout>
    <View 
        android:layout_weight="0.06"
        android:layout_height="0dp"
        android:layout_width="10dp"
        />
    <RelativeLayout 
        android:id="@+id/rlActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView 
            android:id="@+id/imgActivity"
            android:layout_marginLeft="54dp"
        	android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:src="@drawable/left_menu_activity_icon"
        	/>
        <TextView 
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imgActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="活动"
            style="@style/LeftMenuButtonStyle"
            />
    </RelativeLayout>
    <View 
        android:layout_weight="0.06"
        android:layout_height="0dp"
        android:layout_width="10dp"
        />
    <RelativeLayout 
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <ImageView 
            android:id="@+id/imgCard"
            android:layout_marginLeft="54dp"
        	android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:src="@drawable/left_menu_card_icon"
        	/>
        <TextView 
            android:layout_toRightOf="@+id/imgCard"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名片"
            style="@style/LeftMenuButtonStyle"
            />
    </RelativeLayout>
    <View 
        android:layout_weight="0.15"
        android:layout_height="0dp"
        android:layout_width="10dp"
        />
</LinearLayout>
</RelativeLayout>

