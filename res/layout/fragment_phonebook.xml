<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/navbar"
        android:background="#f0f0f0"
	    android:layout_width="match_parent"
	    android:layout_height="50dp" 
	    >
	    <EditText
	        android:id="@+id/searchEditView"
	        android:layout_width="match_parent"
	        android:layout_height="26dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp"
	        android:textSize="16dp"
	        android:background="@drawable/search_edittext_background"
	        android:textColor="@color/black"
	        android:singleLine="true"
	        android:inputType="text"
	        android:gravity="center_vertical|left"
	        android:imeOptions="actionSearch"
	        android:hint="请输入搜索关键词..."
	        android:drawableLeft="@drawable/search_icon"
	        android:paddingLeft="5dp"
	        android:paddingTop="1dp"
	        android:focusable="false"
	        android:drawablePadding="3dp"
	        />
		<Button 
		    android:layout_alignRight="@+id/searchEditView"
		    android:id="@+id/searchDeleteButton"
		    android:layout_width="22dp"
		    android:layout_height="22dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="12dp"
		    android:background="@drawable/search_delete"
		    android:visibility="invisible"
		    android:onClick="ButtonClick"
		    />
	</RelativeLayout>
	<View 
	    android:layout_below="@+id/navbar"
	    android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        />
    <android.support.v4.widget.SwipeRefreshLayout
            android:layout_below="@+id/divider"
            android:id="@+id/srlRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            >
        <ExpandableListView
            android:id="@+id/elvPhonebook"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:divider="@null"
            android:groupIndicator="@null"
            android:fadingEdge="none"
            android:transcriptMode="disabled"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/xindicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:background="@drawable/round_1"
            />
</RelativeLayout>
