<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
    </RelativeLayout>

	<EditText
	    android:layout_marginTop="30dp"
	    android:layout_marginLeft="13dp"
	    android:layout_marginRight="13dp"
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:inputType="phone" 
        android:textSize="@dimen/navbar_button_text_size" 
       	android:background="@drawable/login_edit_frame"
		android:paddingLeft="10dp"   
		android:hint="请输入手机号码"
        />
	
	<RelativeLayout 
	    android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:layout_marginRight="13dp"
            android:id="@+id/btnGetCode"
	        android:layout_width="116dp"
	        android:layout_height="33dp"
	        android:text="@string/get_code" 
	        android:layout_alignParentRight="true"
	        android:textColor="#0189bd"
	        android:textSize="@dimen/cell_subtitle_size" 
	        android:clickable="true"
	        android:onClick="ButtonClick"
	        android:background="@drawable/getcode_button"
	        android:padding="8dp"
            />
        <TextView 
            android:layout_marginRight="13dp"
            android:id="@+id/tvTimeLeft"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
           	android:gravity="center_vertical|right"
            android:textSize="@dimen/navbar_button_text_size" 
            android:visibility="invisible"
            android:textColor="#0189bd"
            />
    </RelativeLayout>
	
	<EditText
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="13dp"
	    android:layout_marginRight="13dp"
        android:id="@+id/edtCode"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:inputType="phone" 
        android:textSize="@dimen/navbar_button_text_size" 
       	android:background="@drawable/login_edit_frame"
		android:paddingLeft="10dp"
		android:hint="请输入6位数字验证码"
        />
	
	<EditText
	    android:layout_marginTop="24dp"
	    android:layout_marginLeft="13dp"
	    android:layout_marginRight="13dp"
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:inputType="textPassword" 
        android:textSize="@dimen/navbar_button_text_size" 
       	android:background="@drawable/login_edit_frame"
		android:paddingLeft="10dp"   
		android:hint="请设置新密码"
        />
	
	<Button 
        android:id="@+id/btnRegister"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="13dp"
	    android:layout_marginRight="13dp"
	    android:background="@drawable/login_button"
	    android:text="确定"
	    android:textSize="@dimen/navbar_button_text_size" 
	    android:textColor="@color/white"
	    android:onClick="ButtonClick"
        />
</LinearLayout>
