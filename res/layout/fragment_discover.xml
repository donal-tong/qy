<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background_color"
    >
	<View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <RelativeLayout 
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/btn_download"
        android:visibility="gone"
        >
        
        <ImageView
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:src="@drawable/icon_discover_download"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="下载通讯录"
            style="@style/discover_text_style"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <RelativeLayout 
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/btn_recommend"
        >
        
        <ImageView
            android:id="@+id/imgRecommend"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:src="@drawable/icon_discover_recommend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="微信群推荐"
            style="@style/discover_text_style"
            />
        <com.readystatesoftware.viewbadger.BadgeView
            android:text="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/badgeRecommend"
				android:visibility="visible"
				android:layout_alignTop="@+id/imgRecommend"
				android:layout_toRightOf="@+id/imgRecommend"
				android:layout_marginLeft="-10dp"
				android:layout_marginTop="-5dp"
				android:layout_gravity="center" />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <RelativeLayout 
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/btn_topic"
        >
        
        <ImageView
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:src="@drawable/icon_discover_topic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="热门话题"
            style="@style/discover_text_style"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
    <RelativeLayout 
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/btn_fileshare"
        >
        
        <ImageView
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:src="@drawable/icon_discover_fileshare"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="文件共享"
            style="@style/discover_text_style"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
</LinearLayout>
