<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/topicIcon"
        android:layout_marginLeft="10dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        />
    
    <TextView 
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/topicIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/topicNameTV"
        android:textColor="@color/black"
        android:textSize="@dimen/cell_title_size"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        />
    
    <ImageView 
        android:id="@+id/topicCB"
        android:layout_marginRight="10dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/topic_option_unselected"
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/topicNameTV"
        android:background="#dfdfdf"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>
