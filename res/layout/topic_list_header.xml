<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <ImageView 
        android:id="@+id/avatarImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        />
    
    <TextView 
        android:layout_marginLeft="10dp"
        android:id="@+id/tv1"
        android:layout_alignTop="@+id/avatarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/cell_title_size"
        android:text="发表我的话题"
        android:layout_toRightOf="@+id/avatarImageView"
        />
    <TextView 
        android:id="@+id/tv2"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tv1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8d8d8d"
        android:textSize="@dimen/cell_subtitle_size"
        android:text="发表我的话题与群友分享讨论"
        />
    
    <Button 
        android:id="@+id/myTopicButton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/tv2"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="5dp"
        android:text="我的话题"
        android:textColor="@color/white"
        android:textSize="@dimen/cell_subtitle_size"
        android:background="@drawable/topic_mine_button"
        />
    
    <Button 
        android:id="@+id/pubTopicButton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/myTopicButton"
        android:layout_toRightOf="@+id/myTopicButton"
        android:layout_marginLeft="20dp"
        android:text="发表话题"
        android:textColor="@color/white"
        android:textSize="@dimen/cell_subtitle_size"
        android:background="@drawable/topic_pub_button"
        />
    
    <View 
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pubTopicButton"
        android:layout_marginTop="12dp"
        android:background="#e3e3e3"
        />
    
    <LinearLayout 
        android:layout_below="@+id/divider1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f1f1f1"
    >
    
    <TextView 
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="18dp"
        android:textSize="@dimen/section_title_size"
        android:textColor="#999999"
        android:text="推荐的话题"
        />
    
    <View 
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#e4e4e4"
        />

</LinearLayout>

</RelativeLayout>
