<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e5e5e5"
    >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg_remind"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="14dp"
	    android:layout_marginBottom="25dp"
	    >
	    <LinearLayout 
	        android:layout_marginTop="12dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:orientation="horizontal"
	        android:id="@+id/circle"
	        >
	            <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	            <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="110dp"
	        android:layout_height="22dp"
	        android:background="@drawable/bg_remind_selector"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/circle"
	        android:layout_marginTop="20dp"
	        android:id="@+id/selectorLayout"
	        >
	       	 
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/mineLayout"
	        android:layout_below="@+id/selectorLayout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        >
	        <RelativeLayout 
	            android:layout_marginTop="12dp"
		        android:id="@+id/headLayout"
		        android:layout_width="match_parent"
		        android:layout_height="105dp"
		        android:background="@drawable/bg_remind_head"
		        android:layout_marginLeft="12dp"
	        	android:layout_marginRight="12dp"
		        >
	        	<ImageView 
	        	    android:id="@+id/imgAvatar"
	        	    android:layout_width="49dp"
	        	    android:layout_height="50dp"
	        	    android:layout_marginLeft="31dp"
	        	    android:layout_marginTop="27dp"
	        	    android:src="@drawable/bg_remind_avatar"
	        	    />
	        	<TextView 
	        	    android:id="@+id/tvName"
	        	    android:layout_width="68dp"
	        	    android:layout_height="15dp"
	        	    android:layout_alignTop="@+id/imgAvatar"
	        	    android:layout_marginTop="5dp"
	        	    android:layout_toRightOf="@+id/imgAvatar"
	        	    android:layout_marginLeft="25dp"
	        	    android:ellipsize="end"
	        	    android:text="aaaaa"
	        	    />
	    	</RelativeLayout>
	    	<ListView 
	    	    android:layout_below="@+id/headLayout"
	    	    android:id="@+id/lvRemind"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
        		android:cacheColorHint="#00000000"
         		android:fadingEdge="none"
        		android:background="@color/transparent"
	    	    />
	    	<View 
	    	    android:layout_below="@+id/headLayout"
	    	    android:layout_width="151dp"
	    	    android:layout_height="63dp"
	    	    android:background="@drawable/bg_remind_mine_nothing"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_marginTop="58dp"
	    	    android:visibility="gone"
	    	    />
	    </RelativeLayout>
	</RelativeLayout>
</LinearLayout>
