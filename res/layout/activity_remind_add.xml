<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e5e5e5">
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="#5ac2e0"
        android:id="@+id/nav"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="onClick"
            />
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_add_normal"
            android:layout_centerVertical="true"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:paddingLeft="8dp"
            android:drawablePadding="8dp"
            android:onClick="onClick"
            android:background="#f5691d"
            android:layout_margin="5dp"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_below="@+id/nav"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg_remind"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="14dp"
	    android:layout_marginBottom="25dp"
	    >
	    <LinearLayout 
	        android:layout_marginTop="12dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:orientation="horizontal"
	        android:id="@+id/circle"
	        >
	            <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	            <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	        <View 
	                android:layout_width="16dp"
	                android:layout_height="2dp"
	                />
	        <ImageView 
	            android:layout_width="13dp"
	            android:layout_height="13dp"
	            android:background="@drawable/bg_remind_circle"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_below="@+id/circle"
	        android:layout_marginTop="43dp"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        >
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	        <EditText 
	            android:id="@+id/tvName"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:hint="点击输入提醒名称"
	            android:textColorHint="#808080"
	            android:textColor="#00a1d6"
	            android:textSize="15dp"
	            android:gravity="center_vertical"
	            android:paddingLeft="23dp"
	            android:background="@null"
	            />
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	        <TextView 
	            android:id="@+id/tvTime"
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:hint="点击选择时间"
	            android:textColorHint="#808080"
	            android:textColor="#00a1d6"
	            android:textSize="15dp"
	            android:gravity="center_vertical"
	            android:paddingLeft="23dp"
	            />
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            >
	            <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
       	        android:hint="重复"
	            android:textColorHint="#808080"
	            android:textColor="#00a1d6"
	            android:textSize="15dp"
	            android:gravity="center_vertical"
	            android:paddingLeft="23dp"
	            />
	            <TextView 
	                android:layout_alignParentRight="true"
	            	android:layout_width="100dp"
	           	 	android:layout_height="match_parent"
	            	android:textColorHint="#808080"
	            	android:textColor="#00a1d6"
	            	android:textSize="15dp"
	            	android:text="重复"
	            	android:gravity="center_vertical|right"
	           	 	android:layout_marginRight="23dp"
	            />
	        </RelativeLayout>
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            >
	            <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
       	        android:hint="隐藏提醒"
	            android:textColorHint="#808080"
	            android:textColor="#00a1d6"
	            android:textSize="15dp"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="23dp"
	            />
		        <ToggleButton 
		            android:id="@+id/hideRemindTogBtn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="2dp"
		            android:background="@android:color/transparent"
        			android:button="@drawable/remind_toggle_button"
        			android:checked="false"
        			android:text=""
        			android:textOff=""
        			android:textOn=""
		            />
	        </RelativeLayout>
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="35dp"
	            android:hint="提醒描述"
	            android:textColorHint="#808080"
	            android:textColor="#00a1d6"
	            android:textSize="15dp"
	            android:gravity="center_vertical"
	            android:paddingLeft="23dp"
	            />
	        <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	       	 	android:background="#e5e5e5"
	        	/>
	    </LinearLayout>
	    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/timeLayout"
        android:visibility="gone"
        android:onClick="onClick"
        >
        <Button 
            android:id="@+id/btnTimeOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:layout_above="@+id/picker"
            android:layout_marginBottom="2dp"
            />
        <View 
            android:layout_width="match_parent"
       		android:layout_height="2dp"
       		android:layout_above="@+id/picker"
       		android:background="#5ac2e0"
            />
        <LinearLayout
            android:id="@+id/picker"
            android:layout_alignParentBottom="true" 
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal" 
       		android:background="@color/white"
       		android:layout_centerHorizontal="true"
            >
            <DatePicker 
	        	android:id="@+id/datePicker"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:calendarViewShown="false"
	        />
	    	<TimePicker 
		        android:id="@+id/timePicker"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        />
        </LinearLayout>
    </RelativeLayout>
	</RelativeLayout>
	
</RelativeLayout>
